{{#extends "base"}}

{{#block "content"}}
<h2>Add you Calories Here</h2>
<form method="POST">
    <div>
        <label>Food Name:</label>
        <input type="text" name="foodName" class="form-control" />
    </div>
    <div>
        <label>Calories:</label>
        <input type="text" name="calories" class="form-control" />
    </div>
    <div>
        <label>Meal:</label>
        <input type="radio" name="meal" value="breakfast" /><label>Breakfast</label>
        <input type="radio" name="meal" value="lunch" /><label>Lunch</label>
        <input type="radio" name="meal" value="dinner" /><label>Dinner</label>
        <input type="radio" name="meal" value="supper" /><label>Supper</label>
    </div>
    <div>
        <label>Cuisine:</label>
        <select class="form-control" name="cuisine">
            <option value="chinese">Chinese</option>
            <option value="western">Western</option>
            <option value="japanese">Japanese</option>
        </select>
    </div>
    <div>
        <label>Type of food:</label>
        <input type="checkbox" name="tags" value="healthy" /><label>Healthy</label>
        <input type="checkbox" name="tags" value="low-carb" /><label>Low Carb</label>
        <input type="checkbox" name="tags" value="vegan" /><label>Vegan</label>
        <input type="checkbox" name="tags" value="hi-fiber" /><label>High Fibre</label>
    </div>
    <input type="submit" class="btn btn-primary mt-3">
</form>

{{/block}}


{{/extends}}